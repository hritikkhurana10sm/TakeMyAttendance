<style>
    body {
        padding-top: 5%;
        padding-left: 25%;
        display: inline-table;
        justify-content: center;
        font-family: Roboto, Arial, sans-serif;
        font-size: 15px;
        background-color: #181a1b;
        color : #e8e6e3;
    }
    a{
        color : #3391ff
    }

    form {
        border: 5px solid #1ce23d;
        padding-bottom: 20%;
    }

    input[type=text],
    input[type=password] {
        width: 100%;
        padding: 16px 8px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
    }

    button {
        background-color: #1ce23d;
        color: white;
        padding: 14px 0;
