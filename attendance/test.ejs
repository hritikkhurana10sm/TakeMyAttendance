         <% result.forEach(function(results){%>
           <tr>
              <th style=" font-size: 23px;">Name : <%= results.name %></th>
              <th style=" font-size: 23px;">PRN : <%= results.prn %></th>
           </tr>
         <% }) %>
      
       </table>
