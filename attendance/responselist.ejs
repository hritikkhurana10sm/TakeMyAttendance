<html>
  <head>
    <title>TakeMyAttendance</title>
  </head>
<title>
  TakeMyAttendance
</title>

<body style="display: flex;justify-content: center;align-items: center; flex-direction: column;">
  <style>
    h2 {
      padding-top: 4%;
      text-align: center;
    }

    table,
    th,
    td {
      border: 1px solid white;
      font-size: 20px;
    }

    table {
      text-align: center;
      background-color: #fff3f3;
      width: 40%;
      background-color: #7a0000;
      color: white;

    }

    th {

      font-weight: bolder;
    }

    th,
    td {
      height: 30%;
      padding: 10px
    }
  </style>


  <table id="list" cellspacing="10" cell-padding="15" style="box-shadow: 9px 10px 12px 1px rgb(28 28 28)">
    <tr>
      <h2>Students Attendence Record</h2>
    </tr>

    <% records.forEach(function(record){%>
    <tr>
      <th style=" font-size: 23px;">Name : <%= record.name %>
      </th>
      <th style=" font-size: 23px;">PRN : <%= record.prn %>
      </th>
    </tr>
    <% }) %>

  </table>


  <script src="https://unpkg.com/axios/dist/axios.min.js"></script>

</body>

</html>